/* before.wxss */

.news-item-container {
  background-color: #f2f2f2;
  width: 100%;
  padding: 0px 8px;
  margin-bottom: 5px;
}

.sub-title {
  color: #76787e;
  height: 36px;
  line-height: 36px;
  padding: 0 16px;
  width: 100%;
  font-size: 14px;
}

.news-item {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 16px;
  width: 92%;
  padding: 5px;
  margin: 8px 8px 0px;
  border: 1px solid #eaeaea;
  border-bottom: 1px solid #d0d0d0;
  border-radius: 5px;
}

.news-item-left {
}

.news-item-right {
  width: 50px;
  height: 50px;
}

.news-item-right image {
  width: 50px;
  height: 50px;
}
